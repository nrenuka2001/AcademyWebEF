@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model AcademyWebEF.Models.CourseEditorModel

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post"
                  asp-controller="Course"
                  asp-action="Create">

                <h2>Course Editor</h2>
                <hr />

          

                <div class="form-group">
                    <label asp-for="CourseTitle"></label>
                    <input asp-for="CourseTitle" class="form-control" />
                   
                </div>
                <span asp-validation-for="CourseTitle" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="DurationInDays"></label>
                    <input asp-for="DurationInDays" class="form-control" />
                  
                </div>
                <span asp-validation-for="DurationInDays" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>

                <div class="form-group">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
                <span asp-validation-for="IsActive"></span>

                <input asp-for="CourseId" />

                <div style="margin-top:20px;">
                   

                    <button type="submit" class="btn btn-primary">Create Course</button>
                    <a href="@Url.Action("CoursesList","Course")" style="margin-right:5px;" class="btn btn-secondary">Back</a>
                </div>


            </form>
        </div>
        <div class="col-6"></div>
    </div>
</div>